; editorconfig.org
root = true

[*]
charset                     = utf-8
continuation_indent_size    = 4
end_of_line                 = lf
indent_size                 = 4
indent_style                = space
insert_final_newline        = true
max_line_length             = off
tab_width                   = 4
trim_trailing_whitespace    = true

[{*.md,*.yml}]
indent_size                 = 2
